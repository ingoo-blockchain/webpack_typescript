{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@pages/*": ["pages/*"],
            "@css/*": ["assets/css/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
            // "moduleResolution": "Node",
            // "target": "es5",
            // "esModuleInterop": true
        }
    }
}
