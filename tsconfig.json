{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@pages/*": ["pages/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
